<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg" >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="54dip"
        android:layout_height="54dip"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_widget_clean"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/widget_clean" />

    <TextView
        android:id="@+id/tv_widget_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_logo"
        android:layout_alignLeft="@+id/tv_widget_count"
        android:text="剩余内存：00MB"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_widget_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_widget_mem"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/iv_logo"
        android:text="当前进程数：00"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>