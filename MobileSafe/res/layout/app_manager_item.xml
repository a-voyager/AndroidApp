<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="8dip"
    android:layout_height="48dip" >

    <TextView
        android:id="@+id/tv_app_manager_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/iv_app_manager_app"
        android:text="应用名称"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_app_manager_app_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_app_manager_app_name"
        android:layout_marginTop="28dip"
        android:text="安装位置"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_app_manager_app"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>